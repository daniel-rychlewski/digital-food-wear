<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.type.watch" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <queries>
        <package android:name="com.google.android.googlequicksearchbox"/>
    </queries>

    <!-- If ever set allowBackup to true, the EncryptedSharedPreferences file should be excluded.
    https://developer.android.com/reference/androidx/security/crypto/EncryptedSharedPreferences -->

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Example"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name="business.digitalfood.watch.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.FoodActivity"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.ContactActivity"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.CryptoActivity"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.ModeActivity"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.CartActivity"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.OptionsActivity"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.PaymentActivity"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.TermsOfUseActivity"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="business.digitalfood.watch.activity.ImprintActivity"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name="androidx.wear.activity.ConfirmationActivity">
        </activity>
    </application>

</manifest>